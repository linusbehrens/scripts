#!/bin/bash

# local path = $HOME/code/scripts/menu/dmenu/
# local path = $HOME/code/scripts/menu/

awk -F, '{
  if ($2 != "") {
    print $2
  } else {
    print $1
  }
}' $HOME/code/scripts/menu/websites.csv | dmenu -c -i -l 10 | while read selection; do
  if [ -z "$selection" ]; then
    exit 0
  fi
  awk -F, -v sel="$selection" '
    $2 == sel { print $1; found=1 }
    $2 == "" && $1 == sel { print $1; found=1 }
    END { if (!found) exit 1 }
  ' $HOME/code/scripts/menu/websites.csv | while read url; do
    xdg-open "$url" >/dev/null 2>&1 &
  done
done

